<div class="container mt-4">
  <h1 class="mb-4 text-center text-primary">My Projects</h1>

  <!-- Add Project Form -->
  <div class="card mb-4 shadow-sm">
    <div class="card-body">
      <h5 class="card-title mb-3">Add New Project</h5>
      <form action="/projects/add" method="POST" enctype="multipart/form-data">
        <div class="mb-3">
          <label class="form-label fw-bold">Project Name</label>
          <input type="text" name="project_name" class="form-control" placeholder="Enter project name" required>
        </div>
        <div class="mb-3">
          <label class="form-label fw-bold">Description</label>
          <textarea name="description" class="form-control" rows="3" placeholder="Write a short description" required></textarea>
        </div>
        <div class="mb-3">
          <label class="form-label">Project Image</label>
          <input type="file" name="project_image" class="form-control" accept="image/*">
        </div>  
        <button type="submit" class="btn btn-success">Add Project</button>
      </form>
    </div>
  </div>

  <!-- Project List -->
  <div class="card shadow-sm">
    <div class="card-body">
      <h5 class="card-title mb-3">Project List</h5>
  
      {{#if projects.length}}
      <div class="list-group">
        {{#each projects}}
        <div class="list-group-item d-flex align-items-start gap-3">
          <!-- Gambar project -->
          {{#if this.project_image}}
          <img src="/uploads/{{this.project_image}}" alt="{{this.project_name}}" class="rounded"
            style="width: 80px; height: 80px; object-fit: cover;">
          {{else}}
          <img src="/img/no-image.png" alt="No image" class="rounded"
            style="width: 80px; height: 80px; object-fit: cover;">
          {{/if}}
  
          <!-- Info project -->
          <div>
            <h6 class="mb-1 fw-bold">{{this.project_name}}</h6>
            <p class="mb-1 text-secondary">{{this.description}}</p>
            <small class="text-muted">Created at: {{this.created_at}}</small>
          </div>
        </div>
        {{/each}}
      </div>
      {{else}}
      <p class="text-muted">No projects available yet.</p>
      {{/if}}
    </div>
  </div>
</div>
