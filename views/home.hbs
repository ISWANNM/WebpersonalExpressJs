{{!< layouts/main }}

<div class="text-center mb-5">
  <h1>Welcome to My Personal Web</h1>
  <p class="lead">Saya masih belajar pemograman.</p>

  {{!-- {{#if usersData}}
    <p>Halo, <strong>{{usersData}}</strong>! Selamat datang kembali ðŸ‘‹</p>
  {{else}}
    <p>Silakan <a href="/login">login</a> untuk mengelola project Anda.</p>
  {{/if}} --}}
</div>

<hr>

<h3 class="mb-4 text-center">Daftar Projects</h3>

{{#if projects.length}}
  <div class="row">
    {{#each projects}}
    <div class="list-group-item d-flex align-items-start gap-3">
      <!-- Gambar project -->
      {{#if this.project_image}}
      <img src="/uploads/{{this.project_image}}" alt="{{this.project_name}}" class="rounded"
        style="width: 80px; height: 80px; object-fit: cover;">
      {{else}}
      <img src="/img/no-image.png" alt="No image" class="rounded" style="width: 80px; height: 80px; object-fit: cover;">
      {{/if}}
    
      <!-- Info project -->
      <div>
        <h6 class="mb-1 fw-bold">{{this.project_name}}</h6>
        <p class="mb-1 text-secondary">{{this.description}}</p>
        <small class="text-muted">Created at: {{this.created_at}}</small>
      </div>
    </div>
    {{/each}}
  </div>
{{else}}
  <p class="text-center text-muted">Belum ada project yang ditambahkan.</p>
{{/if}}
